.top {
    width: 100%;
    height: 60rpx;
    background-color: #D2D2D2;
    display: flex;
    flex-direction: column;
    align-content: center;
    text-align: center;
    margin-bottom: 20rpx;
    color: #688985;
}

.circle {
    width: 20rpx;
    height: 20rpx;
    /* background-color: #000; */
    float: left;
    margin: 15rpx 20rpx 0 0;
    border: #000 solid 2rpx;
    border-radius: 50%;
    
}

.cell {
    height: 200rpx;
    font-size: 16px;
    background-color: #fff;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 30rpx;
  }
  
  .cell-item {
    padding: 20rpx 30rpx;
  }
  

.content {
    height: 200rpx;
}

.content-main {
    display: flex;
}

.content-main image {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 10rpx;
}

.content-info {
    width: 520rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #666;
    line-height: 1.5;
    margin: 20rpx;
}